<p id="notice"><%= notice %></p>

<h1>Listing Vehicles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Color</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.color %></td>
        <td><%= vehicle.condition %></td>
        <td><%= vehicle.price %></td>
        <td><%= vehicle.category.name %></td>

        <td class="text-right">
        <%= link_to 'Show', vehicle, class: "btn btn-link" %>
        <%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-link" %>
        <%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary" %>
